{
  "name": "codeowners",
  "patterns": [
    {
      "include": "#comment"
    },
    {
      "include": "#absolute-path-matcher"
    },
    {
      "include": "#pattern-matcher"
    },
    {
      "include": "#owner-matcher"
    }
  ],
  "repository": {
    "comment": {
      "match": "\\s*(#.*)",
      "name": "comment.line.codeowners"
    },
    "absolute-path-matcher": {
      "match": "^\\s*(/\\S+)",
      "name": "entity.name.function.codeowners"
    },
    "pattern-matcher": {
      "match": "^\\s*(\\S+)",
      "name": "entity.name.type.codeowners"
    },
    "owner-matcher": {
      "match": "\\S*\\s\\S*@\\S*",
      "name": "storage.type.function.codeowners"
    }
  },
  "scopeName": "text.codeowners"
}
