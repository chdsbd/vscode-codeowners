{
    "name": "vscode-codeowners",
    "displayName": "CODEOWNERS",
    "description": "VS Code extension for CODEOWNERS file",
    "publisher": "jasonnutter",
    "repository": {
        "url": "https://github.com/jasonnutter/vscode-codeowners"
    },
    "license": "MIT",
    "version": "1.1.1",
    "engines": {
        "vscode": "^1.29.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:**/CODEOWNERS"
    ],
    "main": "./extension",
    "contributes": {
        "commands": [
            {
                "command": "vscode-codeowners.show-owners",
                "title": "CODEOWNERS: Show owners of current file"
            }
        ],
        "languages": [
            {
                "id": "codeowners",
                "aliases": [
                    "CODEOWNERS",
                    "codeowners"
                ],
                "filenames": [
                    "CODEOWNERS"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "codeowners",
                "scopeName": "text.codeowners",
                "path": "./syntaxes/codeowners.tmLanguage.json"
            }
        ]
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.1",
        "@types/node": "^18.14.2",
        "@types/vscode": "^1.75.1",
        "prettier": "^2.8.4",
        "typescript": "^4.9.5",
        "vscode-test": "^1.6.1"
    },
    "dependencies": {
        "@snyk/github-codeowners": "^1.1.0",
        "find-up": "^5.0.0"
    }
}
