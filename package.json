{
    "name": "vscode-codeowners",
    "displayName": "CODEOWNERS",
    "description": "VS Code extension for CODEOWNERS file",
    "publisher": "jasonnutter",
    "repository": {
        "url": "https://github.com/jasonnutter/vscode-codeowners"
    },
    "license": "MIT",
    "version": "1.1.1",
    "engines": {
        "vscode": "^1.29.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:**/CODEOWNERS"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "vscode-codeowners.show-owners",
                "title": "CODEOWNERS: Show owners of current file"
            }
        ],
        "languages": [
            {
                "id": "codeowners",
                "aliases": [
                    "CODEOWNERS",
                    "codeowners"
                ],
                "filenames": [
                    "CODEOWNERS"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "codeowners",
                "scopeName": "text.codeowners",
                "path": "./syntaxes/codeowners.tmLanguage.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "./node_modules/.bin/esbuild ./src/extension.ts --bundle --platform=node --external:vscode --outfile=out/extension.js",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "test": "npm run compile && node ./out/test/runTest.js",
        "format": "./node_modules/.bin/prettier --write src/* src/**/* .circleci/* *.md *.json",
        "format:ci": "./node_modules/.bin/prettier --check src/* src/**/* .circleci/* *.md *.json"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.1",
        "@types/node": "^18.14.2",
        "@types/vscode": "^1.75.1",
        "esbuild": "^0.17.10",
        "prettier": "^2.8.4",
        "typescript": "^4.9.5",
        "vscode-test": "^1.6.1"
    },
    "dependencies": {
        "@snyk/github-codeowners": "^1.1.0",
        "find-up": "^5.0.0"
    }
}
